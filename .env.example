# ============================================
# Game Provider - Environment Variables
# ============================================
# Copie este arquivo para .env e ajuste os valores

# Ambiente
NODE_ENV=development
PORT=3000

# ============================================
# PostgreSQL
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=gameadmin
DB_PASSWORD=gamepass123
DB_NAME=game_provider

# ============================================
# Redis
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispass123

# ============================================
# JWT (Autenticação B2B)
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_EXPIRATION=24h

# ============================================
# Webhooks
# ============================================
WEBHOOK_SECRET=webhook-secret-key-for-signature-validation
WEBHOOK_TIMEOUT=5000
WEBHOOK_MAX_RETRIES=3

# ============================================
# Game Settings
# ============================================
DEFAULT_CURRENCY=BRL
SESSION_EXPIRATION_HOURS=24

# ============================================
# Ferramentas (opcional - para docker-compose --profile tools)
# ============================================
PGADMIN_EMAIL=admin@game.local
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050
REDIS_UI_PORT=8081
